        "files",
        "videos",
        "audios"
      ]
    },
    "technical_content_type": {
      "type": "enumeration",
      "enum": [
        "pdf",
        "image",
        "audio",
        "video"
      ]
    },
    "functional_content_type": {
      "type": "enumeration",
      "enum": [
        "infographic",
        "how-to",
        "presentation",
        "report",
        "paper"
      ]
    },
    "topics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::topic.topic"
    },
    "tags": {
      "type": "string"
    },
    "id_resource": {
      "type": "uid",
      "targetField": "title"
    }
