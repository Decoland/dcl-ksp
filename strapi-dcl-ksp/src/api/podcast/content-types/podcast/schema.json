{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "singularName": "podcast",
    "pluralName": "podcasts",
    "displayName": "Podcast",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "audio_file": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "audios"
      ]
    },
    "thumbnail_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "duration": {
      "type": "string",
      "regex": "/^([01]\\d|2[0-3]):([0-5]\\d):([0-5]\\d)$/"
    },
    "publication_date": {
      "type": "date"
    },
    "topic": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::topic.topic"
    },
    "tags": {
      "type": "string"
    }
  }
}
